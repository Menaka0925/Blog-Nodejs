<!-- page.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/public/page.css">
    <title>Article</title>
    <style>
        /* page.css */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 50px auto 20px; /* Adjust margin to move the container down */
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .container h1 {
            color: #333;
            margin-bottom: 20px;
            text-align: left;
            text-transform: capitalize; /* Auto capitalize the title */
        }

        .container p {
            margin-bottom: 15px;
        }

        .container p.bold {
            font-weight: bold; /* Make the posted date bold */
        }

        .btn {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-decoration: none; 
            margin-top: 20px; 
        }

        .btn:hover {
            background-color: #0056b3;
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
            transform: translateY(-2px);
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container border rounded border-primary">
        <% if(article) { %>
            <h1><%= article.title.toUpperCase() %></h1> <!-- Transform title to uppercase -->
            <p class="bold">Posted: <%= article.createdAt.toDateString() %></p> <!-- Add bold class to make posted date bold -->
            <p><%= article.description %></p>
            <a href="/" class="btn btn-primary">Go Back</a>
        <% } else { %>
            <p>Article not found!</p>
        <% } %>
    </div>
</body>
</html>
